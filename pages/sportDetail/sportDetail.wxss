/* pages/sportDetail/sportDetail.wxss */

.container {
  padding-top: 16rpx;
}

.item {
  display: flex;
  height: 82rpx;
  background-color: #fff;
  align-items: center;
  margin-top: 16rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-radius: 8rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 32rpx;
}

.content {
  font-size: medium;
}

.sport-container {
  display: flex;
  flex-flow: row wrap;
  margin-top: 16rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.sport-item {
  display: flex;
  flex-direction: column;
  flex: 0 0 33.33333333%;
  height: 228rpx;
  background-color: #fff;
  border: 8rpx solid #f5f5f5;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.sport-value {
  flex: 3 1 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: medium;
  color: #262626;
}

.sport-name {
  flex: 1 1 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #595959;
  font-size: small;
  color: #fff;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
