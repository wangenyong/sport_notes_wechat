/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  height: 100%;
}

text {
  color: #262626;
}

.btn-circle {
  display: flex;
  background-color: #f8914b;
  width: 96rpx;
  height: 96rpx;
  margin: 32rpx;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.btn-circle-icon {
  width: 48rpx;
  height: 48rpx;
}

.picker {
  flex-grow: 1;
}
